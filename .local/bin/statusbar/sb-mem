#!/bin/sh

# load colors!
color4=$(xrdb -query | grep '*color4:'| awk '{print $NF}')
background=$(xrdb -query | grep '*background:'| awk '{print $NF}')

printf "^c%s^^b%s^î‰¦ " "$color4" "$background"
printf "^c%s^ %s^d^" "$color4" "$(free -h | awk '/^Mem/ { print $3 }' | sed s/i//g)"

