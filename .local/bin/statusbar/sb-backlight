#!/bin/sh

# load colors!
color3=$(xrdb -query | grep '*color3:'| awk '{print $NF}')

case "$BLOCK_BUTTON" in
	1) light -S 100 ;;
	3) light -S 15.3 ;;
	4) light -A 1 ;;
	5) light -U 1 ;;
	#5) light -U 1 ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

vol="$(light -G)"
printf "^d^^c%s^ÔÅÇ  " "$color3"
printf "^c%s^%s^d^" "$color3" "${vol%.*}"
