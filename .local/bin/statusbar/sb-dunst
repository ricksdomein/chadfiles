#!/bin/sh

. "${XDG_CONFIG_HOME:-$HOME/.config}/x11/xcolors"

case "$BLOCK_BUTTON" in
	1) dunstctl set-paused toggle ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

DUNST_STATUS="$(dunstctl is-paused)"

if [ "$DUNST_STATUS" = "false" ]; then
  printf "^c%s^%s" "$base0A" ""
else
  printf "^c%s^%s" "$base08" ""
fi
